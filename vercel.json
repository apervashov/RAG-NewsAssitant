{
  "version": 2,
  "public": true,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/stream", "dest": "/api/stream.js" },
    { "src": "/api/agent", "dest": "/api/agent.js" },
    { "handle": "filesystem" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.+)", "dest": "/public/$1" }
  ]
} 